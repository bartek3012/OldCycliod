<Window x:Class="OldCycliod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OldCycliod"
        mc:Ignorable="d"
        Title="Mechanizm wyjściowy przekładni cykloidalnej" Height="570" Width="870" ResizeMode="CanMinimize"
        WindowStartupLocation="Manual" Left="300" Top="100" 
        Icon="/Icon1.ico">
    <Window.Background>
        <ImageBrush ImageSource="/Images/Background.jpg" />
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="161*"/>
            <ColumnDefinition Width="239*"/>
            <ColumnDefinition Width="420*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="2" Margin="228,-30,-30,-30"  Source="/Images/GearDraw.png" RenderOptions.BitmapScalingMode="HighQuality" Grid.ColumnSpan="2" />

        <Frame VerticalAlignment="Top" x:Name="InputOutputPages" Grid.Column="0" Height="529" Width="420" NavigationUIVisibility="Hidden" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
